<?php
/**
 * @file
 * Code for the BB Carrousel feature.
 */

include_once 'bb_carrousel.features.inc';

/**
 * Implements hook_init
 */
function bb_carrousel_init() {
  $path = drupal_get_path('module', 'bb_carrousel');

  drupal_add_js($path . '/flexslider/jquery.flexslider-min.js');
  drupal_add_js($path . '/js/script.js');
  
  drupal_add_css($path . '/flexslider/flexslider.css');
}